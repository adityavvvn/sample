# Server Environment Variables
# Copy this file to server/.env and fill in your actual values

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=5000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/skillplot

# CORS Configuration - Support multiple origins
CLIENT_URLS=http://localhost:3000,https://skillspot-frontend.onrender.com
# Alternative: Single URL (for backward compatibility)
# CLIENT_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External API Keys
JOOBLE_API_KEY=ba5421c6-08ce-46b3-b2af-0753e899f81c
# JOOBLE_API_URL=https://jooble.org/api/

